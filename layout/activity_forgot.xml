<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotActivity"
    android:background="@color/blue_700"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/icon"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Enter your register mobile number and \n email below:"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/editTextTextEmailAddress_forgot"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColorHint="#6D6D6D"
        android:textSize="18sp"
        android:background="#fff"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="3dp"
        android:hint=" Email Address" />

    <EditText
        android:id="@+id/editTextPhone_forgot"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="phone"
        android:textColorHint="#6D6D6D"
        android:textSize="18sp"
        android:background="#fff"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/ic_baseline_smartphone_24"
        android:drawablePadding="3dp"
        android:hint=" Mobile Number"/>


    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Next"
        android:textAllCaps="false"
        android:layout_margin="10dp"/>
</LinearLayout>