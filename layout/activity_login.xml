<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/blue_700"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/icon"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/editTextPhone_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint=" Mobile Number(10 digits)"
        android:textColorHint="#6D6D6D"
        android:textSize="18sp"
        android:background="#fff"
        android:inputType="phone"
        android:drawableStart="@drawable/ic_baseline_smartphone_24"
        android:drawablePadding="3dp"/>

    <EditText
        android:id="@+id/editTextTextPassword_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:hint=" Password"
        android:textSize="18sp"
        android:background="#fff"
        android:textColorHint="#6D6D6D"
        android:inputType="textPassword"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="3dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Login"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_loginForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textAllCaps="false"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <Button
            android:clickable="true"
            android:id="@+id/btn_loginSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:text="Don't have an account? Sign up now"
            android:textAllCaps="false" />

    </RelativeLayout>
</LinearLayout>